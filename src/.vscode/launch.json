{
    "version": "0.2.0",
    "configurations": [
    {
        "name": "Launch Firefox against localhost",
        "type": "firefox",
        "request": "launch",
        "reAttach": true,
        "url": "http://localhost:4200",
    },
    {
        "name": "Launch Edge against localhost",
        "request": "launch",
        "type": "pwa-msedge",
        "url": "http://localhost:4200",
        "webRoot": "${workspaceRoot}"
    },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:4200",
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}"
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to Chrome",
            "port": 9222,
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}"
        }
    ]
}
